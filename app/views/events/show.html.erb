<%= render @event %>

<% if @attendees.include?(current_user) %>
  <span>You are already attending this event!</span>
<% else %>
  <%= button_to "Attend Event", event_events_details_path(@event)%>
<% end %>

<h3>Attendees</h3>
<ul>
  <% @attendees.each do |attendee|%>
  <li><%= attendee.name %></li>
  <% end %>
</ul>
